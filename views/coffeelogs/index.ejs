<%- include("../partials/head.ejs") %>

    <h1>Community Home Page</h1>
    <% if (currentUser) { %>
        <h2>Hello <%= currentUser.username %></h2>
    <% } %>
    <% for (let log of coffeelogs) { %>
        <div class="card" style="width: 18rem;">
            <h3><a href="/<%= log._id %>"><%= log.roasters %></a></h3>
            <img src="<%= log.img %>">
            <h4><%= log.blend %></h4>
            <h4><%= log.method %></h4>
            <h4><%= log.rating %></h4>
        </div>
    <% } %> 

<%- include("../partials/foot.ejs") %>